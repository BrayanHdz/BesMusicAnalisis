<Page
    x:Class="MusicPlayer.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MusicPlayer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MusicPlayer.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:playback="using:Windows.Media.Playback"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    MinWidth="270"
    mc:Ignorable="d">




    <Page.Resources>
        <ControlTemplate x:Key="CommandBarTemplate1" TargetType="CommandBar">
            <Grid>
                <TextBlock>asdf</TextBlock>
            </Grid>
        </ControlTemplate>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>-->


        <!--<Image Width="{Binding ElementName=mediaPlayer, Path=ActualHeight}" Height="{Binding ElementName=mediaPlayer, Path=ActualHeight}" />
        <controls:TransportControls Grid.Row="1" />-->

        <Frame x:Name="shellFrame" Grid.RowSpan="2" />
        

        <MediaPlayerElement
            x:Name="mediaPlayer"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            AreTransportControlsEnabled="True">

            <MediaPlayerElement.TransportControls>

                <controls:TransportControls
                    x:Name="TransportControls" 
                    IsCompact="False"
                    IsNextTrackButtonVisible="True"
                    IsPreviousTrackButtonVisible="True" />
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>


        <Grid x:Name="LoadingGrid" Grid.RowSpan="2" Background="{ThemeResource AccentBrush}"  >
            <Grid.Resources>
                <Storyboard x:Name="HideAnimation">
                    <DoubleAnimation To="0" Duration="0:0:0.5" Storyboard.TargetName="LoadingGrid" Storyboard.TargetProperty="Opacity" />
                </Storyboard>
            </Grid.Resources>
        <Image 
            Source="/Assets/SplashScreen.png" Width="620" Height="300" Stretch="None" />
        <ProgressRing
            x:Name="ProgreessIndecator"
            Margin="0,180,0,0"
            Width="40"
            IsActive="True"
            Foreground="White"
            Height="40" />
        </Grid>
        
    </Grid>
</Page>
